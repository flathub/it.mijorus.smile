{
    "app-id": "it.mijorus.smile",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "smile",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--talk-name=it.mijorus.smile",
        "--talk-name=org.gnome.Shell.Extensions"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "python3-requirements.json",
        {
            "name" : "smile",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/mijorus/smile",
                    "commit": "464eee57fd13a0700c80ed073825ef4a4a3a8320"
                }
            ]
        }
    ]
} 
